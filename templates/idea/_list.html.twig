<table class="table table-hover">
    <thead>
    <tr>
        <th scope="col">#</th>
        <th scope="col">Title</th>
    </tr>
    </thead>
    <tbody>
    {% for idea in ideas %}
        <tr>
            <td><a href="{{ path('idea_show', {'id' : idea.id }) }}">#{{ idea.id }}</a></td>
            <td><a href="{{ path('idea_show', {'id' : idea.id }) }}">{{ idea.title }}</a></td>
        </tr>
    {% endfor %}
    </tbody>
</table>